{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "gcc",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/install",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/${presetName}/conan_toolchain.cmake",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_VERBOSE_MAKEFILE": true,
                "YABIL_ENABLE_TESTS": true,
                "YABIL_ENABLE_TBB": true
            }
        },
        {
            "name": "gcc_debug",
            "inherits": "gcc",
            "displayName": "GCC [Debug]",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "gcc_release",
            "inherits": "gcc",
            "displayName": "GCC [Release]",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang",
            "inherits": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "clang_debug",
            "inherits": "clang",
            "displayName": "Clang [Debug]",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang_dev",
            "inherits": "clang_debug",
            "displayName": "Clang [Debug] [Address sanitizer]",
            "cacheVariables": {
                "YABIL_ENABLE_SANITIZER": true,
                "YABIL_SANITIZER_TYPE": "address",
                "YABIL_ENABLE_NATIVE_OPTIMIZATIONS": true
            }
        },
        {
            "name": "clang_release",
            "inherits": "clang",
            "displayName": "Clang [Release]",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "YABIL_ENABLE_NATIVE_OPTIMIZATIONS": true
            }
        },
        {
            "name": "coverage",
            "inherits": "clang_debug",
            "displayName": "Coverage (Clang [Debug])",
            "cacheVariables": {
                "YABIL_ENABLE_COVERAGE": true,
                "BUILD_SHARED_LIBS": true
            }
        },
        {
            "name": "vs",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Visual Studio 17 2022",
            "toolset": "host=x64",
            "architecture": "x64",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/install",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/${presetName}/conan_toolchain.cmake",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "YABIL_ENABLE_TESTS": true,
                "YABIL_ENABLE_TBB": true
            }
        },
        {
            "name": "vs_debug",
            "inherits": "vs",
            "displayName": "Visual Studio 17 [Debug]",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "vs_debug_cuda",
            "inherits": "vs",
            "displayName": "Visual Studio 17 [Debug, CUDA]",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "YABIL_ENABLE_CUDA": true,
                "CMAKE_CUDA_ARCHITECTURES": "86",
                "CMAKE_CUDA_STANDARD": "20"
            }
        },
        {
            "name": "vs_release",
            "inherits": "vs",
            "displayName": "Visual Studio 17 [Release]",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "apple_clang",
            "hidden": true,
            "generator": "Xcode",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/${presetName}/conan_toolchain.cmake",
                "CMAKE_OSX_ARCHITECTURES": "arm64",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "YABIL_ENABLE_TESTS": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "YABIL_ENABLE_TBB": true
            }
        },
        {
            "name": "apple_clang_debug",
            "inherits": "apple_clang",
            "displayName": "Apple Clang [Debug]",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "apple_clang_release",
            "inherits": "apple_clang",
            "displayName": "Apple Clang [Release]",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "YABIL_ENABLE_NATIVE_OPTIMIZATIONS": true
            }
        },
        {
            "name": "android",
            "hidden": true,
            "displayName": "Android [Release]",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/install",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/${presetName}/conan_toolchain.cmake",
                "YABIL_ENABLE_TESTS": true,
                "YABIL_ENABLE_TBB": true
            }
        },
        {
            "name": "android_release",
            "displayName": "Android [Release]",
            "inherits": "android",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "android_debug",
            "displayName": "Android [Debug]",
            "inherits": "android",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}